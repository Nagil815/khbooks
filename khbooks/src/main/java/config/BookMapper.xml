<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="book">

	<select id="bookList" resultType="dto.BookDTO">
		select * from book order by bupdate
	</select>
	
	<select id="bookListByGrade" resultType="dto.BookDTO">
		select * from book order by bgrade
	</select>
	
	<select id="bookListByView" resultType="dto.BookDTO">
		select * from book order by bview
	</select>
	
	<insert id="BookIns" parameterType="dto.BookDTO">
		insert into book
		values(book_bno_seq.nextval, #{bname}, #{gno}, sysdate, 0, 0, #{bthumb}, #{binfo})
	</insert>
	
	<select id="genreList" resultType="dto.GenreDTO">
		select * from genre order by gno
	</select>

</mapper>