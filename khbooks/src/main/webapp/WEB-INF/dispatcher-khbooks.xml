<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:websocket="http://www.springframework.org/schema/websocket"
	xsi:schemaLocation="http://www.springframework.org/schema/websocket http://www.springframework.org/schema/websocket/spring-websocket-4.3.xsd
		http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<mvc:annotation-driven />

	<!-- [1] DataSource빈 선언 -->
	<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="oracle.jdbc.OracleDriver" />
		<property name="url" value="jdbc:oracle:thin://@192.168.10.216:1521:xe" />
		<property name="username" value="hr" />
		<property name="password" value="a1234" />
	</bean>

	<!-- controller -->
	<bean class="test.Test" />
	<bean class="controller.BookListController">
		<property name="service" ref="serviceBook" />
	</bean>
	<bean class="controller.SerialController">
		<property name="service" ref="serviceSerial" />
	</bean>
	
	
	<!-- [2] SqlSessionFactoryBean 빈 선언 -->
	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="mapperLocations">
			<list>
				<value>classpath:config/BookMapper.xml</value>
				<value>classpath:config/SerialMapper.xml</value>
			</list>
		</property>
	</bean>

	<!-- [3] SqlSessionTemplate 빈 선언 -->
	<bean id="sqlSession" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg ref="sqlSessionFactory" />
	</bean>

    <!-- DAO -->
	<bean id="daoBook" class="dao.BookDaoImp">
		<property name="sqlSession" ref="sqlSession" />
	</bean>
	<bean id="daoSerial" class="dao.SerialDaoImp">
		<property name="sqlSession" ref="sqlSession" />
	</bean>
	
	<!-- [5] Service -->
	<bean id="serviceBook" class="service.BookServiceImp">
		<property name="dao" ref="daoBook" />
	</bean>
	<bean id="serviceSerial" class="service.SerialServiceImp">
		<property name="dao" ref="daoSerial" />
	</bean>
	
	<!-- viewResolver -->
	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/view/" />
		<property name="suffix" value=".jsp" />
	</bean>

</beans>
